<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hoclaixe.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dots_height"
                android:gravity="center"
                android:layout_alignBottom="@id/view_pager"
                android:orientation="horizontal"/>
        </RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/thi_thu"
                    android:text="Thi thử\n"
                    android:layout_gravity="center"
                    android:id="@+id/btnThiThu"
                    android:background="@drawable/button_bg_color_with_state"
                    android:gravity="center"
                    android:onClick="ThiThu"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ly_thuyet"
                    android:text="Lý thuyết   \n"
                    android:layout_gravity="center"
                    android:id="@+id/btnLyThuyet"
                    android:background="@drawable/button_bg_color_with_state"
                    android:layout_weight="1"
                    android:onClick="HocLyThuyet"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/bien_bao_duong_bo"
                    android:text="Thực hành\n"
                    android:layout_gravity="center"
                    android:id="@+id/btnBienBaoDuongBo"
                    android:src="@drawable/bien_bao_duong_bo"
                    android:background="@drawable/button_bg_color_with_state"
                    android:layout_weight="1"
                    android:onClick="ThucHanh"/>
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/dang_ky_thi"
                    android:text="Đăng ký thi"
                    android:layout_gravity="center"
                    android:id="@+id/btnDangKyThi"
                    android:background="@drawable/button_bg_color_with_state"
                    android:layout_weight="1"
                    android:onClick="DangKyThi"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/google_maps"
                    android:text="Google map"
                    android:layout_gravity="center"
                    android:id="@+id/btnGoogleMap"
                    android:background="@drawable/button_bg_color_with_state"
                    android:layout_weight="1"
                    android:onClick="Googlemaps"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/google_maps_directions"
                    android:text="Tìm đường"
                    android:layout_gravity="center"
                    android:id="@+id/btnTimDuong"
                    android:src="@drawable/cac_cau_hay_sai"
                    android:background="@drawable/button_bg_color_with_state"
                    android:layout_weight="1"
                    android:onClick="TimDuong"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>